<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ntabibles.undercontrol.AddEntryFragment">

    <TextView
        android:id="@+id/main_header"
        android:text="@string/main_header"
        android:textSize="24sp"
        android:layout_marginBottom="@dimen/edit_text"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/blood_glucose_entry"
        android:hint="@string/blood_glucose_hint"
        android:minEms="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number" />
    <EditText
        android:id="@+id/mealtime_insulin_entry"
        android:hint="@string/mealtime_insulin_entry"
        android:minEms="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number" />
    <EditText
        android:id="@+id/longActing_insulin_entry"
        android:hint="@string/longActing_insulin_entry"
        android:minEms="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number" />
    <Button
        android:id="@+id/add_button"
        android:text="@string/add_button"
        android:layout_margin="@dimen/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
